terraform {
  required_version = ">= 1.7.0"
  required_providers {
    google = {
      source  = "hashicorp/google"
      version = "~> 5.0"
    }
  }
}

provider "google" {
  project = var.project_id
  region  = var.region
  # Pro tip: use GOOGLE_APPLICATION_CREDENTIALS env var pointing to the JSON key
  credentials = file("../../terraform-sa.json")
}
